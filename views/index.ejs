    <script>
        function confirmSubmit(val,url) {
            var selection = document.myform.selectedService.value;
            if (selection == "") {
                alert("Please select one of the Service to " +val+".")
            } else {
                var selected = selection.split("$$$",2);
                if (val  == "Delete") {
                    if(selected[1] == "Creating" || selected[1] == "Deleting") {
                        var msg = "You can't delete Service '" + selected[0] + "' as operation status is in-progress."
                        alert(msg);
                    } else {
                        var msg = "Do you want to " + val + " Service '" + selected[0] + "'?"
                        var agree = confirm(msg);
                        if (agree) {
                            document.myform.method = "POST";
                            document.myform.action = url;
                            document.myform.submit();
                        }
                    }
                }
                if(val == "Edit") {
                    var msg = "Do you want to " + val + " Service '" + selected[0] + "'?"
                    var agree = confirm(msg);
                    if (agree) {
                        document.myform.method = "POST";
                        document.myform.action = url;
                        document.myform.submit();
                    }
                }
                if(val == "Status") {
                    if(selected[1] == "Running") {
                        var msg = "Service '" + selected[0] + "' is already Running."
                        alert(msg);
                    } else {
                        var msg = "Do you want to check " + val + " for Service '" + selected[0] + "'?"
                        var agree = confirm(msg);
                        if (agree) {
                            document.myform.method = "POST";
                            document.myform.action = url;
                            document.myform.submit();
                        }
                    }
                }
            }
        }
    </script>
    <body>

        <div id="wrapper">

            <!-- Navigation -->
            <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
